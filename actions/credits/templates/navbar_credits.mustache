{{!
    @template pulseaction_credits/navbar_credits

    Credits display in popover template

    Example context (json):
    {
        "credits": "1500",
        "wwwroot": "https://moodle.site.com",
        "userid": 123,
        "datatoggle": "data-toggle",
        "datacontent": "data-content",
        "dataplacement": "data-placement"
    }
}}
<div class="credits-navbar-container">
    <div class="dropdown">
        <div class="credits-navbar-item" role="button" id="creditsDropdown" {{datatoggle}}="dropdown" aria-controls="credits-action-menu"
            {{datacontent}}="{{#str}} creditsinstructions, pulseaction_credits, {{credits}} {{/str}}" {{dataplacement}}="bottom">
            <div class="credits-info">
                <span class="credits-count">{{credits}}</span>
            </div>
            <div class="credits-icon">
                <i class="fa fa-coins" aria-hidden="true"></i>
            </div>
        </div>

        <div class="dropdown-menu dropdown-menu-right p-2" id="credits-action-menu" style="width:300px;">
            <span> {{#str}} creditsinstructions, pulseaction_credits, {{credits}} {{/str}} </span>
        </div>
    </div>

</div>
